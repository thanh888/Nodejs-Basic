<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/index.css" />
</head>

<body>

    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <div>
        <h1>Update</h1>


        <div class="update-user-container" style="margin: 0 auto; max-width: 500px;">

            <h2>Create User </h2>
            <form action="/update/user" method="post">
                <input type="text" hidden name="userID" value="<%= dataUser[0].id %>">
                <label for="fname">First name:</label><br>
                <input type="text" id="fname" name="fname" value="<%= dataUser[0].firstname %>"><br>
                <label for="lname">Last name:</label><br>
                <input type="text" id="lname" name="lname" value="<%= dataUser[0].lastname %>"><br><br>
                <label for="email">Email</label><br>
                <input type="email" id="email" name="email" value="<%= dataUser[0].email %>"><br><br>
                <label for="address">Address</label><br>
                <input type="text" id="address" name="address" value="<%= dataUser[0].address %>"><br><br>
                <input type="submit" value="Submit">
            </form>
        </div>


</body>

</html>